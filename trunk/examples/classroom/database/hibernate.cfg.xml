<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="hibernate.connection.url">jdbc:hsqldb:file:resources/classroom/database/film</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>
        <mapping resource="classroom/festivaldatabase/FilmTitle.hbm.xml" />
        <mapping resource="classroom/festivaldatabase/FestivalScreening.hbm.xml" />
        <mapping resource="classroom/festivaldatabase/FilmCategory.hbm.xml" />
        <mapping resource="classroom/festivaldatabase/DirectorName.hbm.xml" />
        <mapping resource="classroom/festivaldatabase/FestivalEntry.hbm.xml" />
    </session-factory>
</hibernate-configuration>
