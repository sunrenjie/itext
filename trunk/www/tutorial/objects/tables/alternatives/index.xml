	</site:metadata>
	
	<site:examples>
		<site:example>
			<site:java src="JTable2Pdf" standalone="yes" />
			<site:result>jTable.pdf</site:result>
			<site:description>Print a Swing jTable to a PDF file</site:description>
		</site:example>
		<site:example>
			<site:java src="OldTable" standalone="yes" />
			<site:result>oldtable.pdf</site:result>
			<site:description>Generates a table with the Table object</site:description>
		</site:example>
		<site:example>
			<site:java src="LargeCell" standalone="yes" />
			<site:result>largecell.pdf</site:result>
			<site:description>Trying to fit a Cell on a page</site:description>
		</site:example>
		<site:example>
			<site:java src="TablePdfPTable" standalone="yes" />
			<site:result>tableattributes.pdf</site:result>
			<site:result>tableattributes.rtf</site:result>
			<site:extrajar>iText-rtf.jar</site:extrajar>
			<site:description>Generates a table with the TableAttributes object</site:description>
		</site:example>
		<site:example>
			<site:java src="PaddingBorders" standalone="yes" />
			<site:result>paddingborders.pdf</site:result>
			<site:description>Generates tables with different padding, bordercolors and borderwidths</site:description>
		</site:example>
		<site:example>
			<site:java src="MyFirstTable" standalone="yes" />
			<site:result>MyFirstTable.pdf</site:result>
			<site:description>Generate a table with the Table/PdfPTable object</site:description>
		</site:example>
		<site:example>
			<site:java src="SpecificCells" standalone="yes" />
			<site:result>specificcells.pdf</site:result>
			<site:description>Adding Cells at specific positions</site:description>
		</site:example>
		<site:example>
			<site:java src="RepeatingTable" standalone="yes" />
			<site:result>repeatingtable.pdf</site:result>
			<site:description>Shows how a table is split if it doesn't fit the page</site:description>
		</site:example>
		<site:example>
			<site:java src="NestedTables" standalone="yes" />
			<site:result>nestedtables.pdf</site:result>
			<site:description>Nested tables</site:description>
		</site:example>
		<site:example>
			<site:java src="TableWithImage" standalone="yes" />
			<site:result>imageTable.pdf</site:result>
			<site:externalresource>otsoe.jpg</site:externalresource>
			<site:externalresource>iText.gif</site:externalresource>
			<site:description>Generate a table with the Table object containing Images</site:description>
		</site:example>
	</site:examples>
	
