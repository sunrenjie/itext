<!ELEMENT itext (#PCDATA | chapter | paragraph | list | anchor | phrase | chunk | annotation)*>
<!ATTLIST itext
	title		CDATA	#IMPLIED
	subject		CDATA	#IMPLIED
	keywords	CDATA	#IMPLIED
	author		CDATA	#IMPLIED
>	
<!ELEMENT chapter (title?, sectioncontent) >
<!ATTLIST chapter
	depth		CDATA	#IMPLIED
	indent		CDATA	#IMPLIED
	left		CDATA	#IMPLIED
	right		CDATA	#IMPLIED
>
